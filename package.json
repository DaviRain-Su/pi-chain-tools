{
	"name": "pi-chain-tools",
	"version": "0.1.0",
	"private": false,
	"type": "module",
	"description": "Chain toolsets and Pi adapters (Solana first, multi-chain ready)",
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": "./src/index.ts",
		"./pi/default-extension": "./src/pi/default-extension.ts",
		"./pi/solana-extension": "./src/pi/solana-extension.ts",
		"./pi/solana-workflow-extension": "./src/pi/solana-workflow-extension.ts",
		"./pi/meta-extension": "./src/pi/meta-extension.ts",
		"./pi/evm-extension": "./src/pi/evm-extension.ts",
		"./pi/kaspa-extension": "./src/pi/kaspa-extension.ts",
		"./pi/sui-extension": "./src/pi/sui-extension.ts",
		"./pi/near-extension": "./src/pi/near-extension.ts"
	},
	"pi": {
		"extensions": ["./src/pi/default-extension.ts"],
		"skills": ["skills/"]
	},
	"openclaw": {
		"extensions": ["./index.ts"]
	},
	"scripts": {
		"postinstall": "node scripts/ensure-mysten-compat.mjs",
		"kaspa:mnemonic:key": "node scripts/kaspa-derive-private-key.mjs",
		"lint": "biome check --error-on-warnings .",
		"typecheck": "tsc --noEmit",
		"build": "npm run typecheck",
		"check": "node scripts/normalize-runtime-metrics.mjs && npm run lint && npm run typecheck && npm run schema:validate",
		"schema:validate": "node scripts/validate-openclaw-schemas.mjs",
		"schema:check-files": "node scripts/validate-openclaw-schemas.mjs --list-strict",
		"schema:check-files:json": "node scripts/validate-openclaw-schemas.mjs --list-strict --json",
		"schema:ci-check": "npm run schema:check-files:json && npm run schema:validate",
		"schema:audit": "npm run schema:check-files:json && npm run schema:validate -- --strict --json",
		"strategy:compile": "node scripts/strategy-compile.mjs",
		"strategy:validate": "node scripts/strategy-validate.mjs",
		"strategy:run": "node scripts/strategy-run.mjs",
		"strategy:smoke": "node scripts/strategy-smoke.mjs",
		"security:check": "node scripts/security-audit.mjs",
		"security:scan:once": "node scripts/evm-security-scan-once.mjs",
		"security:watch": "node scripts/evm-security-worker.mjs",
		"security:watch:notify:test": "node scripts/evm-security-notify.mjs",
		"security:watch:service:help": "node scripts/security-watch-service-help.mjs",
		"test": "vitest run && npm run contracts:hyperliquid:test",
		"ci": "node scripts/ci.mjs",
		"ci:retry": "node scripts/ci-retry.mjs",
		"ci:resilient": "node scripts/ci-resilient.mjs",
		"ops:smoke": "node scripts/ops-smoke.mjs",
		"ops:bootstrap": "node scripts/ops-bootstrap.mjs",
		"breeze:smoke": "node scripts/breeze-smoke.mjs",
		"ops:posture": "node scripts/system-posture.mjs",
		"monad:morpho:replay": "node scripts/monad-morpho-replay-pack.mjs",
		"submission:evidence": "node scripts/submission-evidence.mjs",
		"execute:proof": "node scripts/execute-proof.mjs",
		"execute:proof:morpho": "node scripts/execute-proof.mjs --protocol=morpho",
		"execute:proof:bsc": "node scripts/execute-proof.mjs --protocol=bsc",
		"execute:proof:lifi": "node scripts/execute-proof.mjs --protocol=lifi",
		"execute:proof:starknet": "node scripts/starknet-execute-proof.mjs",
		"demo:monad-bsc": "node scripts/demo-monad-bsc.mjs",
		"dashboard:start": "node scripts/dashboard-start.mjs",
		"dashboard:restart": "node scripts/dashboard-restart.mjs --restart",
		"dashboard:ensure": "node scripts/dashboard-restart.mjs",
		"solana:bridge:batch": "node scripts/solana-bridge-safe-batch.mjs",
		"solana:bridge:heartbeat": "node scripts/solana-bridge-heartbeat.mjs",
		"sdk:upgrade-readiness": "node scripts/sdk-upgrade-readiness.mjs",
		"sdk:capability-diff": "node scripts/sdk-capability-diff.mjs",
		"hyperliquid:live": "bash scripts/run-hyperliquid-live.sh",
		"bsc:live": "npm run hyperliquid:live",
		"live:test:preflight": "node scripts/live-test-runner.mjs --mode preflight",
		"live:test:dryrun": "node scripts/live-test-runner.mjs --mode dryrun",
		"live:test:full": "node scripts/live-test-runner.mjs --mode full",
		"readiness:build": "node scripts/readiness-matrix.mjs",
		"readiness:show": "node scripts/readiness-matrix.mjs --show",
		"readiness:refresh": "node scripts/readiness-refresh.mjs",
		"autonomous:hyperliquid:rollout:gate": "npm run check && npm test && npm run live:test:preflight && npm run readiness:refresh",
		"autonomous:rollout:gate": "npm run autonomous:hyperliquid:rollout:gate",
		"autonomous:hyperliquid:cycle": "node scripts/hyperliquid-autonomous-cycle.mjs",
		"autonomous:hyperliquid:bootstrap": "node scripts/hyperliquid-local-bootstrap.mjs",
		"autonomous:hyperliquid:dryrun": "node scripts/autonomous-hyperliquid-dryrun-checklist.mjs && node scripts/hyperliquid-autonomous-cycle.mjs --mode dryrun",
		"autonomous:hyperliquid:runs": "node scripts/autonomous-cycle-runs.mjs",
		"doctor:paths": "node scripts/diagnose-runtime-paths.mjs",
		"guard:no-asterdex": "node scripts/guard-no-asterdex.mjs",
		"autonomous:submission:bundle": "node scripts/autonomous-submission-bundle.mjs",
		"autonomous:submission:validate": "node scripts/autonomous-submission-validate.mjs",
		"autonomous:hyperliquid:testnet:evidence": "node scripts/autonomous-testnet-evidence-run.mjs",
		"autonomous:evidence:regen": "node scripts/autonomous-evidence-regen.mjs",
		"contracts:hyperliquid:compile": "hardhat compile --config contracts/hyperliquid-autonomous/hardhat.config.cjs",
		"contracts:hyperliquid:test": "hardhat test --config contracts/hyperliquid-autonomous/hardhat.config.cjs",
		"contracts:hyperliquid:deploy:testnet": "node contracts/hyperliquid-autonomous/scripts/deploy.mjs",
		"contracts:hyperliquid:verify:testnet": "node contracts/hyperliquid-autonomous/scripts/verify-placeholder.mjs",
		"contracts:hyperliquid:cycle:testnet": "node contracts/hyperliquid-autonomous/scripts/run-cycle.mjs",
		"stable-yield:smoke": "node scripts/stable-yield-smoke.mjs"
	},
	"dependencies": {
		"@cetusprotocol/aggregator-sdk": "^1.4.4",
		"@cetusprotocol/cetus-sui-clmm-sdk": "^5.4.0",
		"@cetusprotocol/common-sdk": "^1.3.2",
		"@cetusprotocol/farms-sdk": "^1.4.0",
		"@cetusprotocol/sui-clmm-sdk": "^1.4.0",
		"@cetusprotocol/vaults-sdk": "^1.7.0",
		"@ethersproject/wallet": "^5.8.0",
		"@jup-ag/api": "^6.0.48",
		"@kaspa/wallet": "^1.4.27",
		"@lifi/sdk": "^3.9.3",
		"@morpho-org/blue-sdk": "^5.16.0",
		"@morpho-org/morpho-ts": "^2.4.6",
		"@mysten/bcs": "^1.9.2",
		"@mysten/sui": "^1.45.2",
		"@mysten/utils": "^0.2.0",
		"@polymarket/clob-client": "^5.2.3",
		"@sinclair/typebox": "^0.34.41",
		"@solana/spl-token": "^0.4.11",
		"@solana/web3.js": "^1.98.4",
		"@venusprotocol/chains": "^0.22.0",
		"@wombat-exchange/configx": "^1.0.11",
		"bs58": "^6.0.0",
		"ethers": "^6.13.5",
		"near-api-js": "^7.1.0",
		"stable-layer-sdk": "^2.0.0"
	},
	"peerDependencies": {
		"@kamino-finance/klend-sdk": "^7.3.18",
		"@meteora-ag/dlmm": "^1.9.3",
		"@raydium-io/raydium-sdk-v2": "^0.2.32-alpha"
	},
	"peerDependenciesMeta": {
		"@kamino-finance/klend-sdk": {
			"optional": true
		},
		"@raydium-io/raydium-sdk-v2": {
			"optional": true
		},
		"@meteora-ag/dlmm": {
			"optional": true
		}
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@kamino-finance/klend-sdk": "^7.3.18",
		"@nomicfoundation/hardhat-ethers": "^3.0.8",
		"hardhat": "^2.24.3",
		"@meteora-ag/dlmm": "^1.9.3",
		"@raydium-io/raydium-sdk-v2": "^0.2.32-alpha",
		"@types/node": "^20.17.24",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4"
	}
}
