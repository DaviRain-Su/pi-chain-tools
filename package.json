{
	"name": "pi-chain-tools",
	"version": "0.1.0",
	"private": false,
	"type": "module",
	"description": "Chain toolsets and Pi adapters (Solana first, multi-chain ready)",
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": "./src/index.ts",
		"./pi/default-extension": "./src/pi/default-extension.ts",
		"./pi/solana-extension": "./src/pi/solana-extension.ts",
		"./pi/solana-workflow-extension": "./src/pi/solana-workflow-extension.ts",
		"./pi/meta-extension": "./src/pi/meta-extension.ts",
		"./pi/evm-extension": "./src/pi/evm-extension.ts",
		"./pi/kaspa-extension": "./src/pi/kaspa-extension.ts",
		"./pi/sui-extension": "./src/pi/sui-extension.ts",
		"./pi/near-extension": "./src/pi/near-extension.ts"
	},
	"pi": {
		"extensions": ["./src/pi/default-extension.ts"],
		"skills": ["skills/"]
	},
	"openclaw": {
		"extensions": ["./index.ts"]
	},
	"scripts": {
		"postinstall": "node scripts/ensure-mysten-compat.mjs",
		"kaspa:mnemonic:key": "node scripts/kaspa-derive-private-key.mjs",
		"lint": "biome check --error-on-warnings .",
		"typecheck": "tsc --noEmit",
		"build": "npm run typecheck",
		"check": "node scripts/normalize-runtime-metrics.mjs && npm run lint && npm run typecheck && npm run schema:validate",
		"schema:validate": "node scripts/validate-openclaw-schemas.mjs",
		"schema:check-files": "node scripts/validate-openclaw-schemas.mjs --list-strict",
		"schema:check-files:json": "node scripts/validate-openclaw-schemas.mjs --list-strict --json",
		"schema:ci-check": "npm run schema:check-files:json && npm run schema:validate",
		"schema:audit": "npm run schema:check-files:json && npm run schema:validate -- --strict --json",
		"security:check": "node scripts/security-audit.mjs",
		"test": "vitest run",
		"ci": "npm run check && npm run security:check && npm test",
		"ci:retry": "node scripts/ci-retry.mjs",
		"ci:resilient": "node scripts/ci-resilient.mjs",
		"ops:smoke": "node scripts/ops-smoke.mjs",
		"monad:morpho:replay": "node scripts/monad-morpho-replay-pack.mjs",
		"submission:evidence": "node scripts/submission-evidence.mjs",
		"demo:monad-bsc": "node scripts/demo-monad-bsc.mjs",
		"dashboard:start": "node apps/dashboard/server.mjs",
		"dashboard:restart": "node scripts/dashboard-restart.mjs --restart",
		"dashboard:ensure": "node scripts/dashboard-restart.mjs",
		"solana:bridge:batch": "node scripts/solana-bridge-safe-batch.mjs",
		"solana:bridge:heartbeat": "node scripts/solana-bridge-heartbeat.mjs",
		"sdk:upgrade-readiness": "node scripts/sdk-upgrade-readiness.mjs"
	},
	"dependencies": {
		"@cetusprotocol/aggregator-sdk": "^1.4.4",
		"@cetusprotocol/cetus-sui-clmm-sdk": "^5.4.0",
		"@cetusprotocol/common-sdk": "^1.3.2",
		"@cetusprotocol/farms-sdk": "^1.4.0",
		"@cetusprotocol/sui-clmm-sdk": "^1.4.0",
		"@cetusprotocol/vaults-sdk": "^1.7.0",
		"@ethersproject/wallet": "^5.8.0",
		"@jup-ag/api": "^6.0.48",
		"@kaspa/wallet": "^1.4.27",
		"@lifi/sdk": "^3.9.3",
		"@morpho-org/blue-sdk": "^5.16.0",
		"@morpho-org/morpho-ts": "^2.4.6",
		"@mysten/bcs": "^1.9.2",
		"@mysten/sui": "^1.45.2",
		"@mysten/utils": "^0.2.0",
		"@polymarket/clob-client": "^5.2.3",
		"@sinclair/typebox": "^0.34.41",
		"@solana/spl-token": "^0.4.11",
		"@solana/web3.js": "^1.98.4",
		"@venusprotocol/chains": "^0.22.0",
		"@wombat-exchange/configx": "^1.0.11",
		"bs58": "^6.0.0",
		"near-api-js": "^7.1.0",
		"stable-layer-sdk": "^2.0.0"
	},
	"peerDependencies": {
		"@kamino-finance/klend-sdk": "^7.3.18",
		"@meteora-ag/dlmm": "^1.9.3",
		"@raydium-io/raydium-sdk-v2": "^0.2.32-alpha"
	},
	"peerDependenciesMeta": {
		"@kamino-finance/klend-sdk": {
			"optional": true
		},
		"@raydium-io/raydium-sdk-v2": {
			"optional": true
		},
		"@meteora-ag/dlmm": {
			"optional": true
		}
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@kamino-finance/klend-sdk": "^7.3.18",
		"@meteora-ag/dlmm": "^1.9.3",
		"@raydium-io/raydium-sdk-v2": "^0.2.32-alpha",
		"@types/node": "^20.17.24",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4"
	}
}
