# Copy to ops/systemd/evm-security-watch.env and fill values.

# RPC endpoints referenced by security-watchlist.json
ETHEREUM_RPC_URL=https://...
BSC_RPC_URL=https://...

# notifier provider: telegram|noop
EVM_SECURITY_NOTIFY_PROVIDER=telegram
TELEGRAM_BOT_TOKEN=123456:replace-me
TELEGRAM_CHAT_ID=-1001234567890

# alert noise controls
EVM_SECURITY_NOTIFY_QUIET_HOURS=23-08
EVM_SECURITY_NOTIFY_WARN_AGG_WINDOW_SEC=900
EVM_SECURITY_NOTIFY_CRITICAL_COOLDOWN_SEC=900
# optional HH:MM local time for forced daily summary
EVM_SECURITY_NOTIFY_DAILY_SUMMARY_AT=08:30

# optional info level push
# EVM_SECURITY_NOTIFY_INFO=false

# optional path overrides
# EVM_SECURITY_WATCH_STATE=apps/dashboard/data/security-state.json
# EVM_SECURITY_WATCH_REPORTS_ROOT=apps/dashboard/data/security-reports
# EVM_SECURITY_WATCH_CONFIG=apps/dashboard/config/security-watchlist.json
